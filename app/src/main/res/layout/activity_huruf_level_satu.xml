<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".presentation.ui.huruf.multiplayer.canvas.HurufLevelSatuActivity">

  <TextView
      android:id="@+id/tv_selesai_h1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/rubik_semi_bold"
      android:text="@string/menunggu_selesai"
      android:textColor="@color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/cnvsLevelSatuHurufone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view4" />

  <ImageView
      android:id="@+id/levelSatuHurufBack"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/back_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/view4"
      android:layout_width="370dp"
      android:layout_height="45dp"
      android:layout_marginTop="15dp"
      android:background="@color/main_green"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/level_huruf_ke" />

  <TextView
      android:id="@+id/level_huruf_ke"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/rubik_semi_bold"
      android:text="@string/level_huruf"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/soal_huruf_dipilih"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="20dp"
      android:textColor="@color/black"
      android:fontFamily="@font/rubik_regular"
      android:text="@string/soal_dipilih"
      android:textAlignment="textStart"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/view4"
      app:layout_constraintEnd_toEndOf="@+id/view4"
      app:layout_constraintStart_toEndOf="@+id/spk_satu_huruf"
      app:layout_constraintTop_toTopOf="@+id/view4" />

  <ImageView
      android:id="@+id/spk_satu_huruf"
      android:layout_width="29dp"
      android:layout_height="0dp"
      android:layout_marginStart="4dp"
      app:layout_constraintBottom_toBottomOf="@+id/view4"
      app:layout_constraintStart_toStartOf="@+id/view4"
      app:layout_constraintTop_toTopOf="@+id/view4"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/voice" />


  <ImageView
      android:id="@+id/refresh_satu_huruf"
      android:layout_width="51dp"
      android:layout_height="51dp"
      android:layout_marginStart="21dp"
      android:layout_marginTop="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view4"
      app:srcCompat="@drawable/reset_btn" />

  <ImageView
      android:id="@+id/btn_user_participant_h1"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/team_btn" />

  <ImageView
      android:id="@+id/submit_satu_huruf"
      android:layout_width="51dp"
      android:layout_height="51dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view4"
      app:srcCompat="@drawable/submit_btn" />

  <com.divyanshu.draw.widget.DrawView
      android:id="@+id/cnvsLevelSatuHurufone"
      android:layout_width="173dp"
      android:layout_height="160dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="84dp"
      android:background="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view4" />

  <com.divyanshu.draw.widget.DrawView
      android:id="@+id/cnvsLevelSatuHuruftwo"
      android:layout_width="173dp"
      android:layout_height="160dp"
      android:layout_marginTop="84dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.512"
      android:background="@color/white"
      app:layout_constraintStart_toEndOf="@+id/cnvsLevelSatuHurufone"
      app:layout_constraintTop_toBottomOf="@+id/view4" />

  <com.divyanshu.draw.widget.DrawView
      android:id="@+id/cnvsLevelSatuHurufthree"
      android:layout_width="173dp"
      android:layout_height="160dp"
      android:layout_marginTop="36dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:background="@color/white"
      app:layout_constraintTop_toBottomOf="@+id/cnvsLevelSatuHuruftwo" />

  <ProgressBar
      android:id="@+id/progressBarH1"
      style="?android:attr/progressBarStyle"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>