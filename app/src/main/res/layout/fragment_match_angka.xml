<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.angka.multiplayer.MatchAngkaFragment">

    <ImageView
        android:id="@+id/btn_back_match_angka"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find_angka"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_green"
        android:text="CARI PLAYER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_angka_acak"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_angka"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_green"
        android:text="MULAI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_angka"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_angka_acak"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_rounded_green"
        android:text="ACAK SOAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level3"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/title_list"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center"
        android:paddingHorizontal="30sp"
        android:text="Angka Multiplayer"
        android:textColor="@color/color_black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_match_angka" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level0"
        android:layout_width="93sp"
        android:layout_height="66sp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_grid"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="Level 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level1"
        android:layout_width="93sp"
        android:layout_height="66sp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/bg_grid"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="Level 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level2"
        android:layout_width="93sp"
        android:layout_height="66sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_grid"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="Level 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level3"
        android:layout_width="93sp"
        android:layout_height="66sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_grid"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="Level 3"
        app:layout_constraintEnd_toStartOf="@+id/bh_level4"
        app:layout_constraintTop_toBottomOf="@+id/bh_level0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level4"
        android:layout_width="93sp"
        android:layout_height="66sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/bg_grid"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="Level 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level1" />

    <ProgressBar
        android:id="@+id/pg_angka_acak"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_angka_acak"
        app:layout_constraintStart_toEndOf="@+id/btn_angka_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_angka_acak" />

    <ProgressBar
        android:id="@+id/pg_cari_player_angka"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_angka"
        app:layout_constraintStart_toEndOf="@+id/btn_find_angka"
        app:layout_constraintTop_toTopOf="@+id/btn_find_angka" />

    <ImageView
        android:id="@+id/cek_acak_angka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_angka_acak"
        app:layout_constraintEnd_toStartOf="@+id/btn_angka_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_angka_acak"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/cek_cari_player_angka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_angka"
        app:layout_constraintEnd_toStartOf="@+id/btn_find_angka"
        app:layout_constraintTop_toTopOf="@+id/btn_find_angka"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level0"
        app:layout_constraintEnd_toStartOf="@+id/bh_level0"
        app:layout_constraintTop_toTopOf="@+id/bh_level0"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level1"
        app:layout_constraintStart_toEndOf="@+id/bh_level1"
        app:layout_constraintTop_toTopOf="@+id/bh_level1"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level2"
        app:layout_constraintEnd_toStartOf="@+id/bh_level2"
        app:layout_constraintTop_toTopOf="@+id/bh_level2"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level4"
        app:layout_constraintStart_toEndOf="@+id/bh_level4"
        app:layout_constraintTop_toTopOf="@+id/bh_level4"
        app:layout_constraintVertical_bias="0.583"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/bh_level3"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/bh_level3"
        app:layout_constraintTop_toBottomOf="@+id/bh_level3"
        app:srcCompat="@drawable/ic_baseline_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>