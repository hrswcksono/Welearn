<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.angka.multiplayer.AngkaReadyFragment">

    <ImageView
        android:id="@+id/back_to_multi_angka"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button"
        android:contentDescription="TODO" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_angka_ready"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/title_list"
        android:fontFamily="@font/rubik_semi_bold"
        android:gravity="center"
        android:text="@string/gabung"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_id_room_angka" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="262dp"
        android:layout_height="74dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/title_list"
        android:fontFamily="@font/rubik_semi_bold"
        android:gravity="center"
        android:paddingHorizontal="10sp"
        android:text="Bergabung Multiplayer Angka"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tf_id_room_angka"
        android:layout_width="173dp"
        android:layout_height="54dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/tf_rounded_corners"
        android:hint="@string/id_game"
        android:fontFamily="@font/rubik_semi_bold"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>