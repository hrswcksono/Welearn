<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".presentation.ui.huruf.multiplayer.MatchHurufActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find_huruf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="CARI PLAYER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_huruf_acak" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_huruf"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button"
        android:text="MULAI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_huruf"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_huruf_acak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:text="ACAK SOAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ba_level3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Pilih Level Huruf"
        android:textColor="@color/color_black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ba_level0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="level0"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ba_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="level1"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ba_level0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ba_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="level3"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ba_level2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ba_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="level2"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ba_level1" />

    <ProgressBar
        android:id="@+id/pg_huruf_acak"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_huruf_acak"
        app:layout_constraintStart_toEndOf="@+id/btn_huruf_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_huruf_acak" />

    <ProgressBar
        android:id="@+id/pg_cari_player_huruf"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_huruf"
        app:layout_constraintStart_toEndOf="@+id/btn_find_huruf"
        app:layout_constraintTop_toTopOf="@+id/btn_find_huruf" />

    <ImageView
        android:id="@+id/cek_acak_huruf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_huruf_acak"
        app:layout_constraintEnd_toStartOf="@+id/btn_huruf_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_huruf_acak"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/cek_cari_player_huruf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_huruf"
        app:layout_constraintEnd_toStartOf="@+id/btn_find_huruf"
        app:layout_constraintTop_toTopOf="@+id/btn_find_huruf"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/hlevel_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/ba_level0"
        app:layout_constraintEnd_toStartOf="@+id/ba_level0"
        app:layout_constraintTop_toTopOf="@+id/ba_level0"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/hlevel_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/ba_level1"
        app:layout_constraintEnd_toStartOf="@+id/ba_level1"
        app:layout_constraintTop_toTopOf="@+id/ba_level1"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/hlevel_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/ba_level2"
        app:layout_constraintEnd_toStartOf="@+id/ba_level2"
        app:layout_constraintTop_toTopOf="@+id/ba_level2"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/hlevel_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/ba_level3"
        app:layout_constraintEnd_toStartOf="@+id/ba_level3"
        app:layout_constraintTop_toTopOf="@+id/ba_level3"
        app:srcCompat="@drawable/ic_baseline_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>