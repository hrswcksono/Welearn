<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_jenis"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@color/item_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_jenis_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_jenis"
        app:layout_constraintEnd_toEndOf="@+id/img_jenis"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/img_jenis"
        app:layout_constraintTop_toTopOf="@+id/img_jenis" />

    <TextView
        android:id="@+id/jenis_soal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jenis_level"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/img_jenis"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/img_jenis"
        app:layout_constraintTop_toBottomOf="@+id/img_jenis" />
</androidx.constraintlayout.widget.ConstraintLayout>