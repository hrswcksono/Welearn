<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_tiga_angka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".presentation.ui.huruf.canvas.HurufLevelTigaActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/levelTigaHurufBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/submit_tiga_huruf"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <View
        android:id="@+id/view4"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_huruf_ke" />

    <TextView
        android:id="@+id/level_huruf_ke"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Level Huruf"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soal_huruf_dipilih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_regular"
        android:text="soal dipilih"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toEndOf="@+id/spk_tiga_huruf"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <ImageView
        android:id="@+id/spk_tiga_huruf"
        android:layout_width="29dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/voice" />

    <ImageView
        android:id="@+id/refresh_tiga_huruf"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:srcCompat="@drawable/ic_baseline_reload" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufone"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="72dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHuruftwo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="72dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/cnvsLevelTigaHurufthree"
        app:layout_constraintStart_toEndOf="@+id/cnvsLevelTigaHurufone"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufthree"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="72dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHuruffour"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHurufthree" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHuruffive"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHurufone" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufsix"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/cnvsLevelTigaHuruffour"
        app:layout_constraintStart_toEndOf="@+id/cnvsLevelTigaHuruffive"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHuruftwo" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufseven"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHuruffive" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufeight"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/cnvsLevelTigaHurufnine"
        app:layout_constraintStart_toEndOf="@+id/cnvsLevelTigaHurufseven"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHurufsix" />

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/cnvsLevelTigaHurufnine"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvsLevelTigaHuruffour" />

    <ProgressBar
        android:id="@+id/progressBarH3"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>