<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".presentation.ui.huruf.canvas.HurufLevelDuaActivity"
    tools:ignore="Overdraw">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/levelDuaHurufBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/view_soal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soal_huruf_ke" />

        <TextView
            android:id="@+id/level_huruf_ke"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Level Huruf"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/soal_huruf_ke"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Soal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/level_huruf_ke" />

        <TextView
            android:id="@+id/soal_huruf_dipilih"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/rubik_regular"
            android:text="soal dipilih"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="29dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/voice" />

        <dev.abhishekkumar.canvasview.CanvasView
            android:id="@+id/cnvsLevelDuaHurufone"
            android:layout_width="173dp"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <dev.abhishekkumar.canvasview.CanvasView
            android:id="@+id/cnvsLevelDuaHuruftwo"
            android:layout_width="173dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cnvsLevelDuaHurufone"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <dev.abhishekkumar.canvasview.CanvasView
            android:id="@+id/cnvsLevelDuaHurufthree"
            android:layout_width="173dp"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnvsLevelDuaHuruftwo" />

        <dev.abhishekkumar.canvasview.CanvasView
            android:id="@+id/cnvsLevelDuaHuruffour"
            android:layout_width="173dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cnvsLevelDuaHurufthree"
            app:layout_constraintTop_toBottomOf="@+id/cnvsLevelDuaHuruftwo" />

        <dev.abhishekkumar.canvasview.CanvasView
            android:id="@+id/cnvsLevelDuaHuruffive"
            android:layout_width="173dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnvsLevelDuaHurufthree" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>