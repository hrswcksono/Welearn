<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mode"
    tools:context=".presentation.ui.angka.ModeAngkaFragment">

    <TextView
        android:id="@+id/level_angka_ke"
        android:layout_width="195dp"
        android:layout_height="89dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/rubik_semi_bold"
        android:text="@string/ayo_belajar_berhitung"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_single_angka"
        android:layout_width="330dp"
        android:layout_height="128dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/img_single_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_angka_ke" />

    <ImageView
        android:id="@+id/btn_multi_angka"
        android:layout_width="330dp"
        android:layout_height="131dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_multi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_single_angka" />

    <ImageView
        android:id="@+id/modeAngkaBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>