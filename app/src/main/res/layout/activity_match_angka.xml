<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".presentation.ui.angka.multiplayer.MatchAngkaActivity">

    <ImageView
        android:id="@+id/btn_back_match_angka"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find_angka"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="CARI PLAYER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_angka_acak" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_angka"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:text="MULAI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_angka" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_angka_acak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:text="ACAK SOAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Pilih Level Angka"
        android:textColor="@color/color_black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:text="Level 0"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:text="Level 1"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Level 2"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:text="Level 3"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bh_level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:text="Level 4"
        android:backgroundTint="@color/view_soal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bh_level2" />

    <ProgressBar
        android:id="@+id/pg_angka_acak"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_angka_acak"
        app:layout_constraintStart_toEndOf="@+id/btn_angka_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_angka_acak" />

    <ProgressBar
        android:id="@+id/pg_cari_player_angka"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_angka"
        app:layout_constraintStart_toEndOf="@+id/btn_find_angka"
        app:layout_constraintTop_toTopOf="@+id/btn_find_angka" />

    <ImageView
        android:id="@+id/cek_acak_angka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_angka_acak"
        app:layout_constraintEnd_toStartOf="@+id/btn_angka_acak"
        app:layout_constraintTop_toTopOf="@+id/btn_angka_acak"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/cek_cari_player_angka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_angka"
        app:layout_constraintEnd_toStartOf="@+id/btn_find_angka"
        app:layout_constraintTop_toTopOf="@+id/btn_find_angka"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level0"
        app:layout_constraintEnd_toStartOf="@+id/bh_level0"
        app:layout_constraintTop_toTopOf="@+id/bh_level0"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level1"
        app:layout_constraintStart_toEndOf="@+id/bh_level1"
        app:layout_constraintTop_toTopOf="@+id/bh_level1"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level2"
        app:layout_constraintStart_toEndOf="@+id/bh_level2"
        app:layout_constraintTop_toTopOf="@+id/bh_level2"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level4"
        app:layout_constraintStart_toEndOf="@+id/bh_level4"
        app:layout_constraintTop_toTopOf="@+id/bh_level4"
        app:srcCompat="@drawable/ic_baseline_submit" />

    <ImageView
        android:id="@+id/alevel_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bh_level3"
        app:layout_constraintEnd_toStartOf="@+id/bh_level3"
        app:layout_constraintTop_toTopOf="@+id/bh_level3"
        app:srcCompat="@drawable/ic_baseline_submit" />
</androidx.constraintlayout.widget.ConstraintLayout>