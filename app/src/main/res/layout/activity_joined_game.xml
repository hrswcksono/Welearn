<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_grid"
    tools:context=".presentation.ui.score.ui.JoinedGameActivity">

    <View
        android:id="@+id/view6"
        android:layout_width="329dp"
        android:layout_height="536dp"
        android:layout_marginTop="56dp"
        android:background="@color/main_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Daftar Game Yang Diikuti"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6"
        tools:listitem="@layout/item_user_join" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_joined_game"
        android:layout_width="wrap_content"
        android:layout_height="361dp"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:listitem="@layout/item_user_join" />

    <ImageView
        android:id="@+id/btn_back_joined_game"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>