<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bot_nav"
    app:startDestination="@id/home_nav">

    <fragment
        android:id="@+id/home_nav"
        android:name="com.tugasakhir.welearn.presentation.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/to_mode_huruf"
            app:destination="@id/mode_huruf_nav" />
        <action
            android:id="@+id/to_mode_angka"
            app:destination="@id/mode_angka_nav" />
    </fragment>
    <fragment
        android:id="@+id/profile_nav"
        android:name="com.tugasakhir.welearn.presentation.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/mode_angka_nav"
        android:name="com.tugasakhir.welearn.presentation.ui.angka.ModeAngkaFragment"
        android:label="fragment_mode_angka"
        tools:layout="@layout/fragment_mode_angka" >
        <action
            android:id="@+id/back_to_home_mode_angka"
            app:destination="@id/home_nav" />
    </fragment>
    <fragment
        android:id="@+id/mode_huruf_nav"
        android:name="com.tugasakhir.welearn.presentation.ui.huruf.ModeHurufFragment"
        android:label="fragment_mode_huruf"
        tools:layout="@layout/fragment_mode_huruf" >
        <action
            android:id="@+id/back_to_home_mode_huruf"
            app:destination="@id/home_nav" />
    </fragment>

</navigation>